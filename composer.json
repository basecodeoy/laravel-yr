{
    "name": "basecodeoy/laravel-yr",
    "description": "A package to interact with the yr.no API with Laravel.",
    "license": "MIT",
    "keywords": [
        "BaseCode Oy",
        "laravel",
        "laravel-yr"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/basecodeoy/laravel-yr",
    "require": {
        "php": "^8.3",
        "basecodeoy/laravel-package-powerpack": "^1.0.0",
        "illuminate/contracts": "^11.0",
        "spatie/laravel-data": "^4.11.1"
    },
    "require-dev": {
        "basecodeoy/standards": "^1.0.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "BaseCodeOy\\Yr\\": "src",
            "BaseCodeOy\\Yr\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Location": "BaseCodeOy\\Yr\\Location\\Facades\\Location",
                "Weather": "BaseCodeOy\\Yr\\Weather\\Facades\\Weather"
            },
            "providers": [
                "BaseCodeOy\\Yr\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    }
}
